<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_security"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="cards main container"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:theme="@style/SecurityCardView"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_margin_column"
        android:layout_marginRight="@dimen/left_right_margin_column"
        android:layout_width="@dimen/whole_screen_width">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TableRow>
                <TextView
                    android:id="@+id/cusip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/inter_row_margin_top"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/issueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/inter_row_margin_top"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/pricePer100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/inter_row_margin_top"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

        </TableLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>